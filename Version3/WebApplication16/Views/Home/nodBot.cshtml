<input type="text" id="problems"/><button id="submit" onclick="nodBot()" value="0">Done</button>
<div id="text"></div>

<script>
    function nodBot() {
        var text = document.getElementById("submit");
        var count = text.value;
        var response = document.getElementById("text");
        if (count == 0) {
            response.innerHTML = "I know, I know.";
            count++
            
        }
        else if (count == 1) {
            count++
            response.innerHTML = "That must be really hard for you.";
            
        }
        else if (count == 2) {
            count = 0;
            response.innerHTML = "Nod-bot is so sorry you have to go through this.";
        }
        text.value = count;

    }
</script> 

